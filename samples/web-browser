#! /usr/local/bin/xs --

#: web browser for command-line usage

npf = ~/.local/noproxy

{!~ $#* 0} && {access $npf} && {
	echo $* | grep -q -f $npf && {
		{!~ $DISPLAY ()} && {
			prx = --no-proxy-server
		} else {
			prx = -no-proxy
		}
	}
}

if {!~ $DISPLAY ()} {
	if {~ $XEMBED ()} {
		setsid chromium-browser --new-window $prx $* >/dev/null >[2=1] &
	} else {
		surf -e $XEMBED $* >/dev/null >[2=1] &
	}
} else {
	if {~ $#* 0} {
		%with-terminal w3m -X $prx -v
	} else {
		%with-terminal w3m -X $prx $*
	}
}
