#! /usr/bin/env xs

if {~ `tty *tty1} {
	screensaver on
	startwm
} else {
	stty start undef stop undef
	%is-login && {
		~ `tty /dev/tty* && vtfbfit
		.as; cookie; .an; echo
		if {~ `tty /dev/tty*} {
			on; echo; net; echo; thermal; battery; load; echo
		}
		.ab; where; .an
	}
	if {{!~ $history ()} && {~ `{cat $history|wc -l} [5-9]??? *?????}} {
		echo 'Consider histclean'
	}
	# `rp` needs an extra bit of support when run this early in setup.
	%prompt; rp; _n@$pid = 0
}
